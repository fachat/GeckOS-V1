#else /* C64 */

&irqkey	  .(
	  lda #0
	  sta shiftfl
	  ldy #$ff
	  sty cnt

	  sta C64CIA1+CIA_PRA
l0	  lda C64CIA1+CIA_PRB
	  cmp C64CIA1+CIA_PRB
	  bne l0
	  cmp #$ff
	  beq nokey

	  lda #%11111110
	  sta C64CIA1+CIA_PRA

l1	  lda C64CIA1+CIA_PRB
	  cmp C64CIA1+CIA_PRB
	  bne l1
	  ldy #8

nextbit	  lsr 
	  bcs nobit
	  pha
	  lda ktab,x
	  cmp #5
	  bcs realkey
	  cmp #3
	  beq realkey
	  ora shiftfl
	  sta shiftfl
	  bpl l3
realkey	  stx cnt
l3	  pla
nobit	  inx
	  cpx #65
	  bcs endkey
	  dey
	  bne nextbit		; test next bit
	  sec
	  rol C64CIA1+CIA_PRA
	  bne l1		; always

endkey	  lda cnt
	  cmp #$ff
	  beq nokey
	  cmp prev
          bne lx

          dec rcnt
          bne nkret
          ldx rspd
          .byt $2c

lx        ldx #KEY_START
          stx rcnt

	  sta prev

	  tay
	  lda shiftfl
	  and #3
	  asl
	  tax
	  lda ttab,x
	  sta tzei
	  lda ttab+1,x
	  sta tzei+1

	  lda (tzei),y
          ldx shiftfl
          clc
          rts
 
nokey     ldx #<-1
	  stx prev
	  ldx #KEY_START
	  stx rcnt
nkret	  ldx shiftfl
	  sec
	  rts
	  .)

