inimem    .(
#ifndef NOMMU
#ifdef ROM
          ldx #$11
l1m       stx zei2
          stx MMU+1
          
          lda #16
          sta zei+1
          ldy #0
          sty zei
          ldx #>BLKSIZ
im1       lda (zei),y
          pha
          lda #$55
          sta (zei),y
          cmp (zei),y
          bne next
          asl
          sta (zei),y
          cmp (zei),y
          bne next
          lda #0
          sta (zei),y
          cmp (zei),y
          bne next
          pla
          sta (zei),y
          inc zei+1
          dex
          bne im1
    
          ldx zei2      
          jsr ENMEM
          pha
next      pla
          ldx zei2
          inx
#ifndef ROMTEST
          cpx #$20
#else
          cpx #$18
#endif
          bcc l1m
#endif /* ROM */
#endif /* NOMMU */
          clc
          rts
          .)

