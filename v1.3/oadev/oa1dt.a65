#define   maxzeil   #25

#ifndef C64
#define	KEY_START   24
#else
#define KEY_START   16
#endif

          .(

          .(
#define   ANZSCR         4
#define   DC_SW_MOD      $20
#define   DC_SW_EXIT     $10

          .word     devend1
          jmp prg1
          .asc "video1",0

devend1   .word     devend2
          jmp prg2
          .asc "video2",0

#ifndef C64

devend2   .word     devend3
          jmp prg3
          .asc "video3",0

devend3   .word     devend
          jmp prg4
          .asc "video4",0

prg4      ldx #3
          .byt $2c

#else 

devend2   .word     devend
          jmp prg3
          .asc "video3",0

#endif

prg3      ldx #2
          bit freq
          bpl prg   ; 1 MHz dann ok
          lda #E_NODEV
          rts

prg2      ldx #1
          .byt $2c
prg1      ldx #0
prg       stx screen
          .)
          
screen    =sysmem
actscr    =sysmem+1
rspd      =sysmem+2
freq      =sysmem+3
bufscr    =sysmem+4
syscnt    =sysmem+5
xscreen   =sysmem+6
shfl      =sysmem+7
status    =sysmem+8
outstr    =sysmem+8+ANZSCR
getstr    =sysmem+8+2*ANZSCR
-sysmem   +=8+3*ANZSCR
zei       =syszp
zei2      =syszp+2
-syszp    +=4

          .(
          cmp #DC_RES
          bne p1
;.byt 2
          sty freq
          jsr inivid
          ldy screen
          lda #DC_SW_MOD      ; linein ein
          sta status,y
          lda #0
          sta outstr,y
          sta getstr,y
          tya
          bne re
          jsr inimem
          jsr inikbd
          jsr inibell
          lda #0
          sta syscnt
          jsr setact
&re       clc
          rts
          .)
          .(
p2x       jmp p2

#ifndef OLDROM
noirq	lda #E_NOIRQ
	.byt $2c
wasirq	lda #E_OK
	rts
#endif

&p1       pha
          lda status,x
          and #DC_SW_EXIT
          beq p1ok
          pla
          sec
          rts
p1ok      pla
          cmp #DC_IRQ
          bne p2x
          .(
#ifndef NOSYSPORT
#ifndef NOSINPORT
          bit SYSPORT
#ifdef OLDROM
          bpl re         ; kein TIRQ dann Ende
#else
	  bpl noirq
#endif
          lda SYSPORT
          sta SYSPORT
#endif
#endif          
          jsr bellirq

#ifndef C64		/* no interuptable video device */          
          lda syscnt
#ifdef OLDROM
          bmi re
#else
	  bmi wasirq
#endif
          lda SYSPORT
          and #1
          beq x1x	; CPU irq line active

          dec syscnt
          cli
          lda #0
          sta xscreen
x3        jsr setscr
          jsr x1
          inc xscreen
          lda xscreen
          cmp #2
          bcc x3
          bit freq
          bmi xe
          cmp #4
          bcc x3
xe        sei
          inc syscnt
#ifndef OLDROM
	lda #E_NOIRQ
#endif
          rts
#endif /* C64 */
          
x1x       lda screen
          sta xscreen
          jsr setscr
x1        .)
          .(
          ldy xscreen
          lda status,y
          and #DC_SW_EXIT
#ifdef OLDROM
          beq x1ok
          rts
#else
	  bne wasirq
#endif
x1ok      lda status,y
          and #DC_SW_RX
          beq p1c
          ldx outstr,y
          lda #SC_STAT
          jsr STRCMD
          cmp #E_NUL
          bne p1c
          jsr rxoff
p1c       .)
          .(
          ldx #0
          stx shfl
          ldy xscreen
          cpy actscr
          bne p1b
#ifdef C64
	  jsr crsrirq
#endif
          jsr irqkey
          stx shfl
          bcs p1b

#ifndef C64          
          cpy #$46       ; switchkey
#else
	  cpy #C64SWITCH ; switchkey (F1) Watch out ktab,y must be > 5
#endif

          bne p1c1
          dex
          bpl p1c2       ; without shift or ctrl
p1c1b     lda actscr     ; then switch screen
          clc
          adc #1
#ifndef C64
          and #3	 ; 4 screens
          bit freq
          bpl p1c1a
          and #1
#else
	  cmp #3	 ; C64 has three screens
	  bcc p1c1a
	  lda #0
#endif
p1c1a     sta actscr
          tay
          lda status,y
          and #DC_SW_EXIT
          bne p1c1b
          tya
          jsr setact
          jmp p1b

p1c2      dex
          bmi p1b        ; nur shift dann ende
          dex
          bpl p1c3       ; Ctrl only, then rxoff
          jsr rxoff
          jmp p1b

p1c3      dex
          bpl p1b        ; Ctrl und Shift dann Mod-switch
          ldy xscreen
          lda status,y
          eor #DC_SW_MOD
          sta status,y
          jmp p1b
         
	  ; no switch key 
p1c1      tax
          ldy xscreen
          lda status,y
          and #DC_SW_RX+DC_SW_TX+DC_SW_MOD
          cmp #DC_SW_RX+DC_SW_TX+DC_SW_MOD
          bne p1b1
          txa
          jsr lineout
          jmp p1b
          
p1b1      and #DC_SW_RX
          beq p1b
          txa
          ldx outstr,y
          jsr PUTC
p1b       .)
          .(
          ldy xscreen
          lda status,y
          and #DC_SW_TX
          beq p1d
          
p1e       ldy xscreen
          cpy actscr
          bne p1ea
          lda shfl       ;ctrl pressed, then stop actual screen output
          and #2
          bne p1d
/*
#ifdef C64		 ; test if crsr should be cleared
	  ldx getstr,y
	  jsr GETC
	  bcs p1f
	  pha
	  tya
	  pha
	  jsr crsrclr
	  pla
	  tay
	  pla
	  jmp gotchar
#endif
*/
p1ea     
	  ldx getstr,y
          jsr GETC
          bcs p1f
gotchar   jsr irqvid	; print char on screen
          jsr setlin
          ldy xscreen
          cpy actscr
          bne p1ea
          lda shfl
          and #1         ; shift pressed, then slow
          beq p1ea
          ;bne p1d
p1f       cmp #E_EOF
          bne p1d
          jsr txoff
p1d       .)
          .(
          lda actscr
          cmp xscreen
          bne p1g
          jsr setcrsr
p1g       
#ifndef OLDROM
#ifdef C64
	lda #E_NOIRQ
#else
	lda #E_OK
#endif
#endif
	  rts
          .)
          .)

p2        .(
          stx xscreen
          cmp #DC_TX_ON
          bne ox1q
          lda #DC_SW_TX
          bne ox1q1
ox1q      cmp #DC_RX_ON
          bne ox1
          lda #DC_SW_RX
ox1q1     ldy xscreen
          ora status,y
          sta status,y
          jmp ok
ox1       cmp #DC_TX_OFF
          bne ox2x
&txoff    ldy xscreen
          lda status,y
          and #DC_SW_TX
          beq devoff
          ldx getstr,y
          lda #SC_NUL
          jsr STRCMD
          lda status,y
          and #255-DC_SW_TX
          sta status,y
          jmp ok          
ox2x      cmp #DC_RX_OFF
          bne ox2
&rxoff    ldy xscreen
          lda status,y
          and #DC_SW_RX
          beq devoff
          ldx outstr,y
          lda #SC_EOF
          jsr STRCMD
          lda status,y
          and #255-DC_SW_RX
          sta status,y
          jmp ok
ox2       cmp #DC_EXIT
          bne ox2a
          jsr rxoff
          jsr txoff
          ldy xscreen
          lda #DC_SW_EXIT
          ora status,y
          sta status,y
          bne ok
ox2a      cmp #DC_ST
          bne o3
ok        lda #E_OK
          .byt $2c
devoff    lda #E_DOFF
          .byt $2c
devon     lda #E_DON
          .byt $2c
notimp    lda #E_NOTIMP
          cmp #1
          rts
o3        cmp #DC_PS
          bne o4
          ldx xscreen
          lda status,x
          and #DC_SW_RX
          bne devon
          tya
          sta outstr,x
          jmp ok
o4        cmp #DC_SPD
          bne o5
          sty rspd
          beq ok
o5        cmp #DC_GS
          bne notimp
          ldx xscreen
          lda status,x
          and #DC_SW_TX
          bne devon
          tya
          sta getstr,x
          jmp ok
          .)
 
