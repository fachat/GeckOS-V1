          .(  

spalte    =sysmem
zeile     =sysmem+1
wx        =sysmem+2
wy        =sysmem+3
wr        =sysmem+4
wh        =sysmem+5
hivid     =sysmem+6
iz        =sysmem+7
is        =sysmem+8
maxspal   =sysmem+10     ;maxspal-sysmem+2 muž gut zu rechnen sein
vtab      =sysmem+11     ;da bei setscr multipliziert
-sysmem   +=11+ANZSCR*(maxspal-spalte+2)
vzei      =syszp
-syszp    +=2

&inivid   .(   
          lda screen
          bne ix

#ifndef C64
          ldx #0
i1        bit freq
          bpl onemhz
          lda vdc8tab,x
          jmp nex
onemhz    lda vdc4tab,x
nex       stx vdc
          sta vdc+1
          inx
          cpx #16
          bcc i1

          lda #40
          bit freq
          bpl i2
          lda #80

#else /* C64 */
/* 
 * For the C64 we put the video screen memory to $e000-$ec00, i.e.
 * we have three possible screens only. We need $ec00-$efff for the 
 * stdlib. We use the std charom at $d000 in the RAM under I/O that 
 * the VIC doesn't see. The boot loader has to copy the charom there. 
 * Then we have all the memory below the I/O relatively free.
 */

	  lda #0
	  sta C64VIC+VIC_IRR		; no interrupts
	  sta C64VIC+VIC_SPRITE_EN	; sprites off
	  lda #27
	  sta C64VIC+VIC_CR1		; 25 lines
	  lda #8
	  sta C64VIC+VIC_CR2		; 40 cols
;	  lda #(($10 & %001110000)>>3)+(($20 & %00111100)<<2)
	  lda #%10000100
	  sta C64VIC+VIC_BASE		; character and screen base

	  lda C64CIA2+CIA_DDRA		; set upper two video address bits
	  ora #3			; via CIA2, PRA Bit 0 and 1
	  sta C64CIA2+CIA_DDRA		; set bits to output mode
	  lda C64CIA2+CIA_PRA
	  and #%11111100
	  sta C64CIA2+CIA_PRA		; change to uppermost page ($c000-)

	  lda #C64_TEXT_COL		; set the screen (text) color 
	  ldy #0
coloop	  sta $d800,y
	  sta $d900,y
	  sta $da00,y
	  sta $db00,y
	  iny
	  bne coloop

	  lda #C64_BGND_COL		; set the border and background color
	  sta C64VIC+VIC_BGND_COL0
	  lda #C64_BORDER_COL
	  sta C64VIC+VIC_EXT_COL

	  lda #40

#endif /* C64 */

i2        sta maxspal

#ifndef C64
          lda #$0c
          sta vdcctrl
#endif
          lda #1
          sta bufscr
ix        
          lda screen
          jsr setscr
          jsr iniscr
          lda #TC_FF     ; form feed
          jsr irqvid
          jsr setlin
          clc
          rts
          .)

&setlin   .(
          lda zeile
          sta iz
          lda spalte
          sta is
          rts
          .)
          
&lineout  .(
          cmp #TC_CR
          bne irqvid
#ifdef C64
	  jsr crsrclr
#endif
          jsr setmmu
          ldy zeile
          cpy iz
          bne liex
          ldy is
          cpy spalte
          bcc liex2
          beq liex2
liex      ldy wx
liex2     sty spalte
          sty zei2
          ldy wr
lie2      cpy spalte
          beq lie1
          dey
          lda (vzei),y
          cmp #" "
          beq lie2
          iny
lie1      sty zei2+1
lie3      ldy zei2
          cpy zei2+1
          bcs lie4
          lda (vzei),y
          ldy bufscr
          ldx outstr,y
          jsr PUTC
          jsr setmmu
          inc zei2
          bne lie3
lie4      lda #TC_CR
          ldy bufscr
          ldx outstr,y
          jmp PUTC
          .)
          
&irqvid   .(
#ifdef C64
	  pha
	  jsr crsrclr
	  pla
#endif
          jsr setmmu
          tay
          bmi x1
          cmp #32
          bcs outc
          jmp xout
x1        cmp #128+32
          bcs outc
          jmp xcode
          
outc      ldy spalte
          sta (vzei),y
          
&nextc    ldy spalte
          iny
          cpy wr
          bcc o1
          jsr nextz
          ldy wx
o1        sty spalte
          rts
          
&nextz    ldx zeile
          inx
          cpx wh
          bcc o2
          jsr scrollup
          ldx wh
          dex
o2        stx zeile

&setzei   stx zeile
          txa
          clc
          adc wy
          tax
          lda #0
          sta vzei
          sta vzei+1
          sta zei2+1
          lda maxspal
          sta zei2
szmul     txa
          beq sz1
          lsr
          tax
          bcc szm1
          lda zei2:clc:adc vzei:sta vzei
          lda zei2+1:adc vzei+1:sta vzei+1
szm1      asl zei2:rol zei2+1
          jmp szmul
sz1       clc
          lda hivid
          adc vzei+1
          sta vzei+1
          ldx zeile
          rts
        
scrollup  ldx #0
          jsr setzei

su2       inx
          cpx wh
          bcs su3
          lda vzei
          clc
          adc maxspal
          sta zei2
          lda vzei+1
          adc #0
          sta zei2+1
          ldy wx
su1       lda (zei2),y
          sta (vzei),y
          iny
          cpy wr
          bcc su1
          
          lda zei2
          sta vzei
          lda zei2+1
          sta vzei+1
          jmp su2     

su3       ldy wx
          lda #" "
su4       sta (vzei),y
          iny
          cpy wr
          bcc su4
          
&clrli    ldx #<-1
          stx iz
          rts
          .)

iniscr    .(
          lda #0
          sta wx
          sta wy
          sta spalte
          lda maxspal
          sta wr
          lda maxzeil
          sta wh
          lda bufscr
          asl
          asl
          bit freq
          bpl i1
          asl
i1        clc
          adc #VIDPAGE<<4
          sta hivid
          ldx #0
          jmp setzei
          .)

&setscr   .(
          cmp bufscr
          beq setmmu
          pha
          lda bufscr
          asl
          asl
          sta zei2+1          
          asl
          clc
          adc zei2+1
          tax
          ldy #0
s1        lda spalte,y
          sta vtab,x
          inx
          iny
          cpy #10
          bcc s1
          lda vzei
          sta vtab,x
          lda vzei+1
          sta vtab+1,x
          pla
          sta bufscr
          asl
          asl
          sta zei2+1
          asl
          clc
          adc zei2+1
          tax
          ldy #0
s2        lda vtab,x
          sta spalte,y
          inx
          iny
          cpy #10
          bcc s2
          lda vtab,x
          sta vzei
          lda vtab+1,x
          sta vzei+1
&setmmu   
#ifndef NOMMU
	  ldy #$10
          sty MMU+VIDPAGE
#endif
          rts
          .)

&setact   .(
          sta actscr
#ifndef C64
          asl
          asl
          bit freq
          bpl s1
          asl
s1        and #%00001111
          ldx #12
          stx vdc
          sta vdc+1
#else
	  asl 
	  asl
	  asl
	  asl
	  ora #%10000100
	  sta C64VIC+VIC_BASE
#endif
          rts
          .)

#ifndef C64
&setcrsr  .(
          ldx #15
          lda spalte
          clc
          adc vzei
          stx vdc
          sta vdc+1
          lda vzei+1
          adc #0
          dex
          stx vdc
          and #%00001111
          sta vdc+1
	  rts
	  .)
#else

	  .(
crsrfl	=sysmem
crsrcnt	=sysmem+1
-sysmem +=2

&&setcrsr			; enable cursor
	  bit crsrfl
	  bmi ret		; already enabled
	  lda #0		; inverse cursor next crsrirq
	  sta crsrcnt
	  lda #128		; enabled, but not invers
	  sta crsrfl
ret       rts

&&crsrclr			; disable cursor
	  bit crsrfl
	  bpl ret		; not enabled
	  lda actscr
	  cmp xscreen
	  bne ret		; not on visible screen - ignore

	  bit crsrfl
	  bvc clr		; not inversed
;	  ldx zeile
;	  jsr setzei
	  ldy spalte
	  lda (vzei),y
	  eor #$80
	  sta (vzei),y
clr	  lda #0
	  sta crsrfl
	  rts

&&crsrirq			; blink cursor
	  bit crsrfl
	  bpl ret		; not enabled
	  dec crsrcnt
	  bpl ret		; not this time
	  lda #10
	  sta crsrcnt
;	  ldx zeile
;	  jsr setzei
php:sei
	  ldy spalte
	  lda (vzei),y
	  eor #$80
	  sta (vzei),y
	  lda crsrfl
	  eor #$40
	  sta crsrfl
plp
	  rts
          .)
#endif
                    
xout      .(
          cmp #TC_CR
          bne x1
          lda wx
          sta spalte
          rts
x1        cmp #TC_LF
          bne x2
          jmp nextz
x2        cmp #TC_BEL
          bne x3a
          jmp trigbell
x3a       .(
          cmp #TC_FF
          bne x3
&&toclr   ldx #0
c2b       jsr setzei
          ldy wx
          lda #" "
c2a       sta (vzei),y
          iny
          cpy wr
          bcc c2a
          inx
          cpx wh
          bcc c2b
          jsr clrli
&&tohome  lda wx
          sta spalte
          ldx #0
          jmp setzei
          .)
x3        .(
          cmp #TC_BS
          bne x4
          ldy spalte
          cpy wx
          beq c7
          dec spalte
bslp      lda (vzei),y
          dey
          sta (vzei),y
          iny
          iny
          cpy wr
          bcc bslp
          dey
          lda #" "
          sta (vzei),y
&x4 c7    rts
          .)
          .)

xcode     .(
          and #$7f
          cmp #maxcode
          bcs xe
          asl
          tax
          lda xadr+1,x
          pha
          lda xadr,x
          pha
xe        rts

maxcode   =13
xadr      .word tocl-1,nextc-1,tocu-1,nextz-1
          .word tohome-1,toclr-1,todel-1,toins-1
          .word towlo-1,towru-1,towcl-1
          .word toeol-1,toclrl-1

todel     .(
          ldy spalte
td0       iny
          cpy wr
          bcs td1
          lda (vzei),y
          dey
          sta (vzei),y
          iny
          bne td0
td1       dey
          lda #" "
          sta (vzei),y
          rts
          .)

toins     .(
          ldy wr
          dey
          lda (vzei),y
          cmp #" "
          bne tie
          cpy spalte
          beq tie
ti1       dey
          lda (vzei),y
          iny
          sta (vzei),y
          dey
          cpy spalte
          bne ti1
          lda #" "
          sta (vzei),y
tie       rts
          .)

toeol     .(
          ldy wr
l         dey
          bmi e
          lda (vzei),y
          cmp #" "
          beq l
e         iny 
