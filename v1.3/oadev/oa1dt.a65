          .(
          

pnt       =sysmem
cnt       =sysmem+1
-sysmem   +=2

&inibell  
#ifndef C64
	  lda #%00100100
          sta VIA1+VIA_IER
          lda VIA1+VIA_ACR
          and #%11000011
          ora #%00010000
          sta VIA1+VIA_ACR
#endif
&trigbell 
#ifndef C64
	  lda #0
          sta pnt
          sta cnt
          lda #15
          sta VIA1+VIA_SR
#endif
&bellirq  
#ifndef C64
	  lda cnt
          bne endirq
          ldy pnt
          lda tcnt,y
          beq endbell
          sta cnt
          lda tfrq,y
          sta VIA1+VIA_T2CL
          lda #0
          sta VIA1+VIA_T2CH
          inc pnt
endirq    dec cnt
          rts
endbell   lda #0
          sta VIA1+VIA_SR
          rts
          
tcnt      .byt 2,2,2,2,2,2,2,0
tfrq      .byt 32,64,128,32,64,128,32

#else
	  rts
#endif
          .)
           
