	bcc tcpok

        DB("Packet discarded: TCP checksum^m^j")
        jmp discard

tcpok	/* here we have a valid TCP packet in (id),0-idlen. */

	lda #0		; data to be discarded at packet beginning.
	sta discd
	sta discd+1

	ldy #TH_FLAG
	lda (id),y
	sta seg_flag

	ldy #TH_DOFFSET
	lda (id),y
	and #$f0
	lsr
	lsr
	clc
	adc #TPH_LEN
	sta doffset
	lda idlen
	sec
	sbc doffset
	sta dlen
	lda idlen+1
	sbc #0
	sta dlen+1

	lda ipl+1
	bne datl
	lda ipl
	sec
	sbc #TPH_LEN
	sta toffset
	clc
	adc doffset
	sta doffset

	bcc looktcb
datl
	DB("Data offset too large^m^j")
	jmp discard

tmp	=sysmem
tmp2	=sysmem+1
-sysmem	+=4	; should be able to hold seq number

looktcb
	/* find TCB for this packet */
	.(
	ldx #<-1
next	inx
	cpx #MAXCONN
	bcc t1

nextl	dex
	bpl inuse

	DB("No Connection!^m^j")
	jmp discard

t1	jsr settcb
	ldy #TCB_STATE
	lda (tcbp),y
	cmp #TCP_LISTEN+1
	bcc next
	jmp search

inuse	jsr settcb		/* TODO: make listen not occupy a full TCB */
	ldy #TCB_STATE
	lda (tcbp),y
	cmp #TCP_LISTEN
	bne nextl		/* full search */

	ldy #TH_TRGP
iu2	lda (id),y
	cmp (tcbp),y
	bne nextl
	iny
	cpy #TH_TRGP+2
	bcc iu2
	; ok, we found one. now copy IP addresses and remote port

	ldy #TCB_SERVICE	/* check if multiple listens */
	lda (tcbp),y
	sta srv
	iny
	lda (tcbp),y
	sta srv+1
	ldy #SRV_FLAG
	lda (srv),y
	and #SFL_MULT
	beq nodup
				/* yes, then dup tcb */
	lda tcbp
	sta srv
	lda tcbp+1
	sta srv+1
	stx conn
	jsr gettcb
	bcc iu4
	ldx conn
	jmp nextl
iu4
	ldy #0
iu3	lda (srv),y
	sta (tcbp),y
	iny
	cpy #TCB_LEN
	bcc iu3
nodup
	ldy #TH_SRCIP
li1	lda (id),y
	sta (tcbp),y
	iny
	cpy #TH_TRGP+2
	bcc li1
	jmp ok

next2	jmp next

search	
	ldy #TH_SRCP		/* TCB_HDR must be 0! */
tl	lda (id),y
	cmp (tcbp),y
	bne next2
	iny
	cpy #TH_TRGP+2
	bcc tl

	ldy #TH_SRCIP
tm	lda (id),y
	cmp (tcbp),y
	bne next2
	iny
	cpy #TH_TRGIP+4
	bcc tm
ok
	.)

	stx conn

	lda islot
	sta qslot
	lda #<-1
	sta islot	; disable re-use of incoming packet

	ldy #TCB_STATE
	lda (tcbp),y
	sta state

#ifdef DEBUGTCP
