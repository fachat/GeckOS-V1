tcp_estab
tcp_finw1  tcp_finw2  tcp_closew tcp_lastack tcp_closing
tcp_timew
tcp_synrxd .(

needack	=sysmem
-sysmem	+=1

	lda #0
	sta needack

	/* first, check sequence number */
	jsr checkseq
	bcc seqok

	lda seg_flag
	and #THF_RST
	bne disca	/* discard packet */

	jsr setseq
	jsr setack
	ldy #TH_FLAG
	lda #THF_ACK
	sta (id),y
	jmp bangbuf

disca	jmp tdiscard

seqok	/* second, check the RST bit */
	lda seg_flag
	and #THF_RST
	beq noreset	

	lda state
	cmp #TCP_SYNRXD
	bne seq1

	/* TODO: if from active open, then close! */
	jmp reset	

seq1	cmp #TCP_LASTACK
	bcs seq2

	/* TODO: flush and close everything */
	jmp tdiscard

seq2	/* TODO: close */
	jmp tdiscard

noreset	/* third, check security and precedence... */

	/* fourth, check SYN bit */

	lda seg_flag
	and #THF_SYN
	beq nosyn
	; this is an error - abort anything

	/* TODO: flush everything, close */
	ldy #TCB_STATE
	lda #TCP_CLOSED
	sta (tcbp),y
	jmp send_rst

nosyn	/* fifth, check the ack bit */
	lda seg_flag
	and #THF_ACK
	bne ackok

	DB("No Ack^m^j")
	jmp tdiscard
ackok
	jsr checkack
	sta tmp

	lda state
	cmp #TCP_SYNRXD
	bne ack1

	lda tmp
	beq badack
	cmp #3
	bcc ackok2

badack	DB("Bad Ack in packet^m^j")
	jmp send_rst
ackok2
	ldy #TCB_STATE	/* everything ok -> enter estab and continue... */
	lda #TCP_ESTAB
	sta (tcbp),y
	sta state

	/* TODO: check queued FIN */

ack1	lda tmp
	beq aignore
	cmp #3
	bcc a0

	/* TODO: ack ahead send_next -> send ack, return */
	DB("Ack ahead send_next^m^j")
	jmp tdiscard
a0
	ldy #TH_ACK	/* copy 2 SND_UNA */
a1	lda (id),y
	sta (tcbp),y
	iny
	cpy #TH_ACK+4
	bcc a1

	jsr ackxmit
aignore
	lda state
	cmp #TCP_FINW1
	bcc do6
	bne ack3

	lda tmp
	cmp #2		; exactly SND_NXT -> FIN ack'd
	bne do6
	ldy #TH_FLAG
	lda #TCP_FINW2
	sta (tcbp),y
	sta state

ack3	cmp #TCP_FINW2
	bne ack4
	/* TODO: ack user close */
	jmp do6

ack4	cmp #TCP_CLOSING
	bne ack5

	lda tmp
	cmp #2
	bne atw
	ldy #TCB_STATE
	lda #TCP_TIMEW
	sta state
	sta (tcbp),y

	ldy #TCB_MSL
	lda #<TIME_MSL
	sta (tcbp),y
	iny
	lda #>TIME_MSL
	sta (tcbp),y

atw	jmp tdiscard

ack5	cmp #TCP_LASTACK
	bne ack6
	
	lda tmp
	cmp #2
	bne atw
	ldy #TCB_STATE
	lda #TCP_CLOSED
	sta (tcbp),y
	jmp atw

ack6	cmp #TCP_TIMEW
	bne do6

	ldy #TCB_MSL
	lda #<TIME_MSL
	sta (tcbp),y
	iny
	lda #>TIME_MSL
	sta (tcbp),y
	
	; ack retransmitted FIN 
	jsr setack
	jsr setseq
	ldy #TH_FLAG
	lda #THF_ACK
	sta (id),y
	jmp bangbuf

	/* sixth, check the URG bit */
do6
	/* seventh, process segment text */ 
	
	lda state
	cmp #TCP_ESTAB
	bcc idat
	cmp #TCP_FINW2+1
	bcs idat

	ldy #0
	lda doffset
	sta (ip),y
	tya
	iny
	sta (ip),y
	iny
	lda dlen
	sta (ip),y
	iny
	lda dlen+1
	sta (ip),y

	jsr hasdata
	beq idat
	jsr copy_n_queue	; ok, we need not copy without FIN...
	inc needack
idat	

	/* eighth, check the FIN bit */
	
	lda state
	cmp #TCP_CLOSED
	beq nofin
	cmp #TCP_LISTEN
	beq nofin
	cmp #TCP_SYNTXD
	beq nofin

	lda seg_flag
	and #THF_FIN
	beq nofin

	lda #1
	ldx #0
	jsr addrxnxt

	inc needack

	jsr setack
	jsr setseq
	ldy #TH_FLAG
	lda #THF_ACK
	sta (id),y
	jsr bangbuf

	lda state
	cmp #TCP_ESTAB+1
	bcs f1
	lda #TCP_CLOSEW
	bne fe

fe	ldy #TCB_STATE
	sta (tcbp),y

f1	
	/* TODO: check other states */

nofin	
	ldx qslot
	bmi noslot

	lda needack
	beq tdisc
	
	jsr setack
	jsr setseq
	ldy #TH_FLAG
	lda #THF_ACK
	sta (id),y
	jmp bangbuf	; maybe check with retransmissions...

tdisc	ldx qslot
	bmi noslot
	jsr bfree
noslot	clc
	rts
	.)

